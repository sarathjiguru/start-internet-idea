# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#OPTIONS
OPTIONS  /*all          controllers.Application.preFlight(all: String)

# Home page
GET     /               controllers.Application.index()

#show link
GET     /send-a-link    controllers.Application.showLinkPage()
# receive a link
POST    /send-a-link    controllers.Application.receiveALink()

#SignUp
GET     /signup-form         controllers.Registration.showRegister()
POST    /signup         controllers.Registration.register()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file   controllers.Assets.at(path="/public", file)
